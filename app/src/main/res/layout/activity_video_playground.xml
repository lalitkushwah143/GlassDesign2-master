<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="2"
    android:rowCount="2"
    tools:context=".VideoPlayground">

    <ImageView
        android:id="@+id/activity_playground_tv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/activity_playground_tv3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/activity_playground_tv2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/random_face1" />

    <ImageView
        android:id="@+id/activity_playground_tv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/activity_playground_tv4"
        app:layout_constraintLeft_toRightOf="@id/activity_playground_tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/random_face2" />

    <ImageView
        android:id="@+id/activity_playground_tv3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/activity_playground_tv4"
        app:layout_constraintTop_toBottomOf="@id/activity_playground_tv1"
        app:srcCompat="@drawable/random_face3" />

    <ImageView
        android:id="@+id/activity_playground_tv4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/activity_playground_tv3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_playground_tv2"
        app:srcCompat="@drawable/random_face1" />
</GridLayout>