<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/list_final_new_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/list_final_new_tvStep"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/list_final_new_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:maxLines="2"
            android:minLines="2"
            android:layout_margin="1dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/design_yellow2"
            android:textSize="25sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/list_final_new_ivIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_final_new_layout" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_final_new_layout"
        app:layout_constraintBottom_toTopOf="@id/list_final_new_tvDesc"
        app:layout_constraintLeft_toRightOf="@+id/list_final_new_ivIcon"
        android:padding="20dp"
        android:id="@+id/list_final_new_imageview"/>

    <VideoView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@drawable/ic_baseline_videocam_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_final_new_layout"
        app:layout_constraintBottom_toTopOf="@id/list_final_new_tvDesc"
        app:layout_constraintLeft_toRightOf="@id/list_final_new_ivIcon"
        android:id="@+id/list_final_new_videoview"
        android:layout_margin="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        style="@style/TestTextViewStyle"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/list_final_new_ivIcon"
        app:layout_constraintBottom_toTopOf="@id/list_final_new_tvDesc"
        android:id="@+id/list_final_new_tvAudio"
        android:text="Tap to play Audio"
        android:padding="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        style="@style/TestTextViewStyle"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/list_final_new_ivIcon"
        app:layout_constraintBottom_toTopOf="@id/list_final_new_tvDesc"
        android:id="@+id/list_final_new_tvVideo"
        android:text="Tap to play Video"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/list_final_new_tvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30dp"
        android:paddingRight="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/list_final_new_ivIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_final_new_imageview" />



</androidx.constraintlayout.widget.ConstraintLayout>