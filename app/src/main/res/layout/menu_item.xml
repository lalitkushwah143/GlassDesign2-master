<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable
        name="item"
        type="com.example.android.glass.glassdesign2.menu.GlassMenuItem" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:id="@+id/constraintLayout"
      android:layout_height="match_parent">




        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/menu_text_size"
            android:layout_height="@dimen/menu_text_size"
            android:contentDescription="@string/menu_item"
            android:src="@{item.icon}"
            app:layout_constraintRight_toLeftOf="@id/textView"
            app:layout_constraintTop_toTopOf="@id/textView"
            app:layout_constraintBottom_toBottomOf="@id/textView"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:tint="@color/design_yellow2" />

        <TextView
            android:id="@+id/textView"
            style="@style/MenuTextViewStyle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/design_yellow2"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@{item.text}" />

    <!-- android:text="@{item.text}"

-->

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
