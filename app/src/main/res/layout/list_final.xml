<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_grey"
    android:id="@+id/list_final_layout_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <TextView
            android:id="@+id/list_final_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="true"
            android:maxLines="2"
            android:minLines="2"
            android:layout_margin="1dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="25sp" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_final_tvTitle"
        app:layout_constraintBottom_toTopOf="@id/list_final_ivAction"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="20dp"
        android:id="@+id/list_final_imageview"/>

    <TextView
        android:id="@+id/list_final_tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/list_final_ivAction"
        app:layout_constraintTop_toBottomOf="@id/list_final_tvTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/list_final_ivAction"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/list_final_tvHint"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/list_final_ivAction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tint="@android:color/white" />



</androidx.constraintlayout.widget.ConstraintLayout>