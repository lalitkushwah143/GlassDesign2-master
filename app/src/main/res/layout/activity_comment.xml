<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/modules_color"
        android:id="@+id/activity_comment_imageview"
        android:padding="20dp" />

    <TextView
        android:id="@+id/activity_comment_tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Issue Comment: "
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/activity_comment_imageview"
        app:layout_constraintLeft_toRightOf="@id/activity_comment_imageview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_comment_tvComment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_comment_imageview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="@dimen/test_text_size"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/activity_comment_imageview"
        app:layout_constraintBottom_toBottomOf="@id/activity_comment_imageview"
        android:textStyle="bold"
        android:textSize="@dimen/desc_text_size"
        android:text="TAP: Add Text \nFORWARD: Clear Text"
        />
</androidx.constraintlayout.widget.ConstraintLayout>